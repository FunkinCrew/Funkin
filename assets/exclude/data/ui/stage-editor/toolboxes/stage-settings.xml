<?xml version="1.0" encoding="utf-8"?>
<collapsible-dialog title="Stage Properties" width="300" height="300">
  <vbox width="100%" height="100%" style="spacing:10px;">
    <section-header text="Stage Name"/>
    <hbox width="100%" height="25">
      <textfield allowFocus="false" id="stageNameText" placeholder="Stage Name" width="250" verticalAlign="center"/>
    </hbox>

    <section-header text="Camera Zoom"/>
    <hbox width="100%" height="25">
      <number-stepper id="stageZoomStepper" min="0.15" max="10" step="0.05" precision="2"/>
    </hbox>

    <section-header text="Asset Folder"/>
    <hbox width="100%" height="25">
      <dropdown id="stageLibraryDrop" width="50%" text="Search Library" searchable="true" searchPrompt="Search Library">
        <data /> <!--is filled with code-->
      </dropdown>
    </hbox>

  </vbox>
</collapsible-dialog>
